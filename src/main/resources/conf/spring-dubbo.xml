    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="${dubbo.application.name}"/>
    <!-- 使用 Nacos 注册中心 -->
    <dubbo:registry address="${dubbo.registry.address}" group="${dubbo.group.name}"/>
    <!-- 用dubbo协议在随机端口暴露服务 -->
    <dubbo:protocol name="${dubbo.protocol.name}" port="-1"/>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.isoft.after.api.DemoService" ref="demoService" version="${dubbo.service.version}"/>
    <dubbo:service interface="com.isoft.after.api.ExternService" ref="externService" />
    <!-- 和本地bean一样实现服务 -->
    <bean id="demoService" class="com.tpadsz.ssm.service.impl.DefaultService"/>
    <bean id="externService" class="com.tpadsz.ssm.service.impl.ExternServiceImpl"/>
    <!-- 引用服务接口 -->
    <!--    <dubbo:reference id="externService" interface="com.isoft.after.api.ExternService" version="0.1.0"/>-->
</beans>